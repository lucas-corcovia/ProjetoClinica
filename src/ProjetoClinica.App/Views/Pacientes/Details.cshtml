@model ProjetoClinica.App.ViewModels.PacienteViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Paciente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd class="col-sm-10">
            <div class="image-preview-container">
                @if (Model.Foto != null)
                {
                    <img id="preview" src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Foto)" alt="Imagem" class="img-fluid" />
                    <input type="hidden" asp-for="Foto">
                }
                else
                {
                    <img id="preview" src="#" alt="Imagem" style="display: none;" />
                }
                <input asp-for="Foto" type="file" name="foto" id="foto" accept="image/*" class="form-control d-none" onchange="exibirFoto(this)" />
            </div>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cpf)
        </dt>
