@model ProjetoClinica.App.ViewModels.PacienteViewModel

@{
    ViewData["Title"] = "Create";
 }
 <br />

<div class="d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Dados Paciente</h5>

    <div class="form-group">
        <button class="btn btn-outline-primary" type="submit" form="formNovoPaciente">
            <i class="bi bi-save2-fill"></i> Salvar
        </button>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-col-12">
        <form asp-action="Create" enctype="multipart/form-data" id="formNovoPaciente">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @*<div class="row">
            <div class="col-md-2">
            <label asp-for="Foto" class="control-label"></label>
            <div class="form-group d-flex align-items-center">
            <div class="image-preview-container" onclick="selectFile()">

            <img id="preview" src="#" alt="Imagem" style="display: none; " class="img-fluid" />

            <input asp-for="Foto" type="file" name="foto" id="foto" accept="image/*" class="form-control d-none" onchange="exibirFoto(this)" />
            </div>
            </div>
            </div>

            </div>*@

            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="Idade" class="control-label"></label>
                        <input asp-for="Idade" class="form-control" />
                        <span asp-validation-for="Idade" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label asp-for="Genero" class="control-label"></label>
                        <select asp-for="Genero" class="form-control">
                            <option value="">Gênero</option>
                            <option value="M">M</option>
                            <option value="F">F</option>
                        </select>
                        <span asp-validation-for="Genero" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Cpf" class="control-label"></label>
                        <input asp-for="Cpf" class="form-control" />
                        <span asp-validation-for="Cpf" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Telefone" class="control-label"></label>
                        <input asp-for="Telefone" class="form-control" />
                        <span asp-validation-for="Telefone" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ProfissaoAtual" class="control-label"></label>
                        <input asp-for="ProfissaoAtual" class="form-control" />
                        <span asp-validation-for="ProfissaoAtual" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ProfissaoAnterior" class="control-label"></label>
                        <input asp-for="ProfissaoAnterior" class="form-control" />
                        <span asp-validation-for="ProfissaoAnterior" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Diagnostico" class="control-label"></label>
                <textarea asp-for="Diagnostico" class="form-control"></textarea>
                <span asp-validation-for="Diagnostico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TratamentosAnteriores" class="control-label"></label>
                <textarea asp-for="TratamentosAnteriores" class="form-control"></textarea>
                <span asp-validation-for="TratamentosAnteriores" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>


            <div class="col-md-6">
                <label asp-for="FisioterapeutaId" class="control-label"></label>
                <select asp-for="FisioterapeutaId" class="form-control" asp-items="ViewBag.FisioterapeutaId"></select>
                <span asp-validation-for="FisioterapeutaId" class="text-danger"></span>
            </div>
            @*<br />
            <div class="form-group">
                <button class="btn btn-outline-primary" type="submit"><i class="bi bi-save2-fill"></i> Salvar</button>
            </div>*@

            <br />
            <h5>Endereço</h5>
            <hr />

            <partial name="_Endereco" />

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        buscaCep();

        $(document).ready(function () {
            buscaCep();
            $('#Cpf').mask('999.999.999-99');
            $('#Telefone').mask('(99) 99999-9999');
        });

        function selectFile() {
            document.getElementById('foto').click();
        }
    </script>
    }

<style>
    .image-preview-container {
        border: 1px solid #ccc;
        padding: 10px;
        max-width: 90px;
        max-height: 90px;
    }
</style>